<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/prabs">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#cac9c9">

    </TableRow>

    <ListView
        tools:listitem="@android:layout/simple_list_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resumeListView"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload New Resume"
        android:onClick="uploadResumePopup"
        android:id="@+id/uploadResume"
        android:height="70dp"
        android:background="#ff3cff43"
        android:width="200dp"
        android:layout_below="@+id/tableRow1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Resumes:"
        android:id="@+id/textView8"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/uploadResume"
        android:layout_centerHorizontal="true" />


</RelativeLayout>