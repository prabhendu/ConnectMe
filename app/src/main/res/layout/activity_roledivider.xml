<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.prabhendu.connectme.roledivider">


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConnectMe"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m seeking a job"
        android:id="@+id/send"
        android:onClick="studentScreen"
        android:layout_marginTop="86dp"
        android:background="#ff45ff41"
        android:width="200dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;M HIRING"
        android:id="@+id/receive"
        android:onClick="recruiterScreen"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/send"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="#ff24b7ff" />


</RelativeLayout>
